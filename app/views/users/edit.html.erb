<%= form_with model: @user do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username %>

  <%= form.label :email %>
  <%= form.text_field :email, placeholder: "placeholder text"%>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <%= form.submit "Create" %>
  <% end %>

  <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
